{
  "pluginAlias": "MiLightESP",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "MiLight ESP"
      },
      "ip": {
        "title": "MiLight Hub IP",
        "type": "string",
        "required": true
      },
      "username": {
        "title": "MiLight Hub Username",
        "type": "string",
        "required": true
      },
      "password": {
        "title": "MiLight Hub Password",
        "type": "string",
        "required": true
      },
      "mqtt": {
        "title": "MQTT Settings",
        "expandable": true,
        "type": "object",
        "properties": {
          "ip": {
            "title": "MQTT Broker IP",
            "type": "string"
          },
          "username": {
            "title": "MQTT Username",
            "type": "string"
          },
          "password": {
            "title": "MQTT Password",
            "type": "string"
          }
        }
      },
      "groups": {
        "title": "Groups",
        "type": "array",
        "required": true,
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Group Name (main switch)",
              "type": "string",
              "required": true
            },
            "sync": {
              "title": "Sync main switch with all light switches",
              "type": "boolean",
              "default": true
            },
            "aliases": {
              "title": "Aliases (light names)",
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [],
              "required": false,
              "uniqueItems": true,
              "maxItems": 4
            },
            "ids_to_listen_on": {
              "title": "IDs to listen on to update current group's state",
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}